<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] Sistema de Gestion de tareas</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Estilos Personalizados -->
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- Navbar con el Logo -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <h1 class="navbar-brand">
                    <img src="~/img/logo.png" alt="Font Sistemas" height="100" class="me-2">
                    <span class="text-black fw-bold">Gestor de tareas</span>
                </h1>
            </div>
        </nav>
    </header>

    <!-- Contenido Principal -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer bg-dark text-white text-center py-3 mt-4">
        <div class="container">
            &copy; 2025 - Roy Benavides
        </div>
    </footer>

    <!-- Scripts de Bootstrap y jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
